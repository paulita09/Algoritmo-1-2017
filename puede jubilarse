void main()
{
	int genero,edad,n;

		cout<<" Ingrese genero 1 si es hombre o 2 si es mujer "<<endl;
	    cin>> genero;
		
		if(genero==1)
		{	cout<<"Ingrese su edad"<<endl;
		    cin>> edad;
		    if(edad>=65)
				cout<<" Puede jubilarse";
			else
				cout<<" No puede jubilarse";
		}
		else
		{   cout<<" Ingrese su edad:"<<endl;
		    cin>>edad;
			cout<<" Cuantos hijos tiene: "<<endl;
