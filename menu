#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int opcion;
	float base,altura,area,lado;
	cout<< "1.Calcular el area del triangulo"<<endl;
	cout<< "2.Calcular el area del cuadrado"<<endl;
	cout<< "3.Calcular el area del rectangulo"<<endl;
	cout<< "0.Finalizar"<<endl;
	cout<< "digite una opcion:"<<endl;
	cin>>opcion;
	switch(opcion)
	{
	case 1:
		cout<<" Ingrese la base del triangulo:"<<endl;
		cin>>base;
		cout<<" Ingrese la altura del triangulo:"<<endl;
		cin>>altura;
		area=(base*altura)/2;
		cout<<" El area del triangulo es:"<<area;
		break;
	case 2:
		cout<<" Ingrese el lado del cuadrado:"<<endl;
		cin>>lado;
		area=(lado*lado);
		cout<<" El area del cuadrado es:"<<area;
		break;

	case 3:
		cout<<" Ingrese la base del rectangulo:"<<endl;
		cin>>base;
		cout<<" Ingrese la altura del triangulo:"<<endl;
		cin>>altura;
		area=(base*altura);
		cout<<" El area del rectangulo es:"<<area;
		break;
	case 0:
		cout<<" FIN DEL PROCESO"<<endl;
		break;
	default:
		cout<<" opcion invalida"<<endl;
		break;
	}
getch();
}
